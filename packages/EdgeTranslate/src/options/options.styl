@import '../common/style/input.styl';

html, body {
    width: 100%;
    padding: 0;
    margin: 0;
    background-color: #eeeeee;
    // 시스템 기본 폰트 스택 적용
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Helvetica Neue", Arial, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-variant-ligatures: none;
    font-weight: 500;
}

#option {
    padding: 0 10%;
    margin: auto;
    max-width: 840px;
    margin: 0px auto;
    box-shadow: 0px 0px 50px rgb(200, 200, 200, 0.5);
    background-color: white;
}

header {
    width: 100%;
    height: 25%;
    padding: 5% 0;
    font-size: 64px;
    font-weight: bold;
    color: color-primary;
    display: flex;
    align-items: center;
}

.row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    line-height: 4em;
    margin: 3% 5%;
    flex: 1 1;
}

.column {
    display: flex;
    align-items: center;
    min-width: 30%;
    max-width: 70%;
}

.checked-label {
    cursor: pointer;
    font-size: medium;
    flex: 3 3 50%;
    justify-content: space-between;
}

.radio-label {
    cursor: pointer;
    font-size: medium;
}

.setting-title {
    font-size: large;
    font-weight: bold;
}

.space {
    display: inline-block;
    width: 5px;
}

footer {
    padding: 5% 0;
    text-align: center;
    font-size: medium;
}

// Dark Mode Styles
.dark {
    background-color: #202124 !important;
    color: #e8eaed !important;
}

.dark #option {
    background-color: #292a2d !important;
    box-shadow: 0px 0px 50px rgba(0, 0, 0, 0.5) !important;
    color: #e8eaed !important;
}

.dark header {
    color: #8ab4f8 !important;
}

.dark .setting-title {
    color: #e8eaed !important;
}

.dark .checked-label, 
.dark .radio-label, 
.dark footer {
    color: #9aa0a6 !important;
}

.dark footer a {
    color: #8ab4f8 !important;
}

.dark select {
    background-color: #3c4043 !important;
    color: #e8eaed !important;
    border: 1px solid #5f6368 !important;
}

